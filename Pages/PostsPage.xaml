<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:nekohub_maui.ViewModels"
             x:Class="nekohub_maui.Pages.PostsPage"
             Title="Posts">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="新建" Priority="0" Order="Primary" Command="{Binding CreateCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="12">
        <!-- App info banner -->
        <Frame Grid.Row="0" Padding="10" BackgroundColor="#EEF5FF" BorderColor="#CDE1FF" HasShadow="False">
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="nekohub-maui" FontAttributes="Bold" FontSize="20" />
                <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalOptions="End">
                    <Label x:Name="PlatformLabel" TextColor="#555" FontSize="12" />
                    <Label x:Name="VersionLabel" TextColor="#555" FontSize="12" />
                </StackLayout>
            </Grid>
        </Frame>

        <!-- Search and filter row -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
            <SearchBar x:Name="Search" Grid.Column="0" Placeholder="搜索标题或内容" Text="{Binding SearchText}" SearchCommand="{Binding SearchCommand}" AutomationProperties.Name="搜索" />
            <Button Grid.Column="1" Text="清空" Command="{Binding ClearSearchCommand}" AutomationProperties.Name="清空搜索" />
            <Picker Grid.Column="2" Title="筛选" SelectedIndex="0" SelectedIndexChanged="OnFilterChanged" AutomationProperties.Name="筛选">
                <Picker.Items>
                    <x:String>全部</x:String>
                    <x:String>已发布</x:String>
                    <x:String>草稿</x:String>
                </Picker.Items>
            </Picker>
            <Picker Grid.Column="3" Title="排序" SelectedIndex="0" SelectedIndexChanged="OnSortChanged" AutomationProperties.Name="排序">
                <Picker.Items>
                    <x:String>更新时间降序</x:String>
                    <x:String>更新时间升序</x:String>
                    <x:String>创建时间降序</x:String>
                    <x:String>创建时间升序</x:String>
                    <x:String>标题升序</x:String>
                    <x:String>标题降序</x:String>
                </Picker.Items>
            </Picker>
        </Grid>

        <RefreshView Grid.Row="2" Grid.RowSpan="2" IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
            <Grid RowDefinitions="Auto,*,Auto">
                <Label Grid.Row="0" TextColor="Red" Text="{Binding ErrorMessage}" IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}" />
                <CollectionView Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single" SelectedItem="{Binding SelectedPost, Mode=TwoWay}">
                    <CollectionView.EmptyView>
                        <StackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="暂无数据" />
                            <Button Text="刷新" Command="{Binding RefreshCommand}" />
                        </StackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <Label Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Title}" FontAttributes="Bold" FontSize="18" />
                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding UpdatedAt, StringFormat='更新于 {0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="Gray" />
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding IsPublished, Converter={StaticResource BoolToStatusConverter}}" TextColor="{Binding IsPublished, Converter={StaticResource BoolToStatusColorConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Grid.Row="2" Text="加载更多" Command="{Binding LoadMoreCommand}" IsVisible="{Binding HasNext}" />
            </Grid>
        </RefreshView>
    </Grid>
</ContentPage>
